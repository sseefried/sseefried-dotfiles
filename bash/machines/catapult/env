export PATH=$PATH:$HOME/.cabal/bin

export SUBLIME_PROJECT_DIR=$HOME/sublime-projects

# For Sean Seefried' task tool
export TASK_DIR=$HOME/.task

export PATH=/usr/local/bin:$PATH

# For X11
export PKG_CONFIG_PATH=/opt/X11/lib/pkgconfig

#
# PATH to include opt and llc which are not available in Mac OS X Mavericks (10.9.4)
# WARNING: This could cause problems with other builds! Remove if so.
export PATH=$PATH:/usr/local/opt/llvm/bin
